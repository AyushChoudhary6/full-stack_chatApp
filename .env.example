# =============================================================================
# EXAMPLE ENVIRONMENT VARIABLES FOR CI/CD PIPELINE
# =============================================================================
# Copy this file to .env and fill in your actual values
# These variables should be added as GitLab CI/CD variables for security

# =============================================================================
# DOCKER REGISTRY CONFIGURATION
# =============================================================================
CI_DOCKER_USER=your_docker_hub_username
CI_DOCKER_PASSWORD=your_docker_hub_password
DOCKER_REGISTRY=docker.io

# =============================================================================
# KUBERNETES CLUSTER CONFIGURATION
# =============================================================================
KUBE_SERVER=https://your-k8s-cluster-endpoint
KUBE_NAMESPACE=chatapp
KUBE_CA_PEM=base64_encoded_cluster_ca_certificate
KUBE_CLIENT_CERT=base64_encoded_client_certificate
KUBE_CLIENT_KEY=base64_encoded_client_private_key
# Alternative: Use service account token instead of client certs
KUBE_TOKEN=your_service_account_token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI_TEST=mongodb+srv://username:password@cluster.mongodb.net/test_database

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Application Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-domain.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
BACKEND_REPLICAS=3
FRONTEND_REPLICAS=3
DOMAIN_NAME=your-domain.com
TLS_SECRET_NAME=chatapp-tls

# =============================================================================
# MONITORING AND LOGGING (Optional)
# =============================================================================
ENABLE_MONITORING=true
LOG_LEVEL=info
